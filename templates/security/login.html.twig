{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %} 
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        {{ 'you.are.logged.in.as'|trans }} <strong>{{ app.user.username }}</strong>, <a href="{{ path('app_logout') }}">{{ 'logout'|trans }} </a>
                    </div>
                {% elseif not app.user %}

                <h1 class="h3 mb-3 font-weight-normal">{{ 'please.sign.in'|trans }}</h1>
                <label for="inputUsername">{{ 'username'|trans }}</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                <label for="inputPassword">{{ 'password'|trans }} </label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <br>
                <button class="btn btn-primary" type="submit">
                    {{ 'sign.in'|trans() }} 
                </button>
                {% endif %}
            </form>
        </div>
        <div class="col-4"></div>
    </div>
    
{% endblock %}
